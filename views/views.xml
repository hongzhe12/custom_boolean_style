<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="custom_boolean_style.list">
            <field name="name">custom_boolean_style list</field>
            <field name="model">custom_boolean_style.custom_boolean_style</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="is_active" widget="late_boolean"/>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="custom_boolean_style.action_window">
            <field name="name">custom_boolean_style window</field>
            <field name="res_model">custom_boolean_style.custom_boolean_style</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="custom_boolean_style.action_server">
            <field name="name">custom_boolean_style server</field>
            <field name="model_id" ref="model_custom_boolean_style_custom_boolean_style"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="custom_boolean_style" id="custom_boolean_style.menu_root"/>
        menu categories
        <menuitem name="Menu 1" id="custom_boolean_style.menu_1" parent="custom_boolean_style.menu_root"/>
        <menuitem name="Menu 2" id="custom_boolean_style.menu_2" parent="custom_boolean_style.menu_root"/>
        <!-- actions -->
        <menuitem name="List" id="custom_boolean_style.menu_1_list" parent="custom_boolean_style.menu_1"
                  action="custom_boolean_style.action_window"/>
        <menuitem name="Server to list" id="custom_boolean_style" parent="custom_boolean_style.menu_2"
                  action="custom_boolean_style.action_server"/>
    </data>
</odoo>